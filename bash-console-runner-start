#!/usr/bin/bash

SPAWN_TERMINAL_COMMAND="kitty -T \"$1\" ./bash-console-runner $* &"

function help_text {
	printf "\nMust feed one executable\n\n"
	printf "Use: bash-console-runner-start \e[32m<executable>\e[0m\n"
}

function error {
	printf "\e[31mERROR\e[0m: $1" >> /dev/stderr
	help_text
	return 1
}

if [ $# -gt 0 ]; then
	if command -v $1 > /dev/null; then
		$SPAWN_TERMINAL_COMMAND
	else
		error "command \e[31m$1\e[0m does not exist\e[0m\n"
	fi
else
	error "too few arguments: you input \e[31m$#\e[0m arguments\n"
fi
